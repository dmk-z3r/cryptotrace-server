{
  "name": "ethereum-tracker",
  "description": "Track and analyze Ethereum blockchain transactions in real-time.",
  "version": "1.0.0",
  "main": "./build/index.js",
  "scripts": {
    "start": "node ./build/index.js",
    "dev": "nodemon --watch \"./src/**/*.ts\" --exec \"ts-node\" ./src/index.ts",
    "start:dev": "nodemon --exec \"yarn clean && yarn build && yarn start\" --watch src --ext ts",
    "clean": "rimraf build",
    "build": "tsc",
    "build:image": "docker build -t ethereum-tracker .",
    "run:image": "docker run -p 3000:3000 ethereum-tracker",
    "docker-compose": "docker-compose up -d",
    "docker:logs": "docker-compose logs",
    "eslint": "eslint ./src/**/*.ts",
    "eslint:fix": "eslint ./src/**/*.ts --fix",
    "prettify": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prettify:check": "prettier --check \"**/*.+(js|ts|json)\"",
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --runInBand --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "typeorm:c-migration": "yarn typeorm -- migration:create src/database/migrations/$npm_config_name",
    "typeorm:create-migration": "yarn typeorm -- migration:create src/database/migrations/InitialMigration",
    "typeorm:run-migrations": "yarn typeorm migration:run -- -d ./src/database/data-source.ts",
    "typeorm:revert-migrations": "yarn typeorm migration:revert -- -d ./src/database/data-source.ts"
  },
  "keywords": [
    "api",
    "ethereum",
    "transactions",
    "tracker"
  ],
  "author": "Olusegun Ekoh (sheygs)",
  "repository": "https://github.com/sheygs/ethereum-tracker.git",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "alchemy-sdk": "^3.5.0",
    "async-retry": "^1.3.3",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.4",
    "express": "^4.21.2",
    "express-ws": "^5.0.2",
    "helmet": "^8.0.0",
    "http-status": "^2.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^10.2.4",
    "mongoose": "^8.8.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.13.1",
    "pnpm": "^9.15.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.16.0",
    "@jest/globals": "^29.7.0",
    "@types/async-retry": "^1.4.9",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-ws": "^3.0.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "babel-jest": "^29.7.0",
    "eslint": "9.x",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "engines": {
    "node": ">= 20.0.0"
  }
}
